@using HotelProject.WebUI.Dtos.ServiceDto
@model CreateServiceDto
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h2>Hizmet Ekle</h2>

<form method="post">
    <div class="form-group">
        <label>Hizmet İkonu:</label>
        <input type="text" asp-for="ServiceIcon" class="form-control" />
        <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hizmet Adı:</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hizmet Açıklaması:</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Hizmeti Ekle</button>
</form>

